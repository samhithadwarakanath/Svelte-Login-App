# Example environment variables for local development
# Copy this to .env and fill in the values. Do NOT commit your real secrets.

# Google OAuth (create credentials in Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SQLite (local file) or another DB connection string supported by Drizzle
DATABASE_URL=file:./dev.db

# Session secret for signing cookies/sessions (replace with a secure random string)
SESSION_SECRET=replace_with_a_secure_random_string

# Optional: local dev port
PORT=5173
